<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/colorTitleText</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.ActionOverflowButton</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActionOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_more_vert_white_24dp</item>
    </style>

</resources>
